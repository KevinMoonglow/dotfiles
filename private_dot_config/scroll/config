    #bindsym $mod+Alt+end move end nomode

    # Focus other monitors
    #bindsym $mod+Shift+$left focus output left
    #bindsym $mod+Shift+$down focus output down
    #bindsym $mod+Shift+$up focus output up
    #bindsym $mod+Shift+$right focus output right

	bindsym $mod+o focus output right
	bindsym $mod+shift+o move to output right
	bindsym $mod+shift+ctrl+o move workspace to output right

#
# Control
#
set $wm_mode ""
mode "$wm_mode" {
	bindsym w exec rofi -modi window -show window; mode default
	bindsym b border toggle 2
	bindsym i exec notify-send "$(swaymsg -t get_tree | jq -rC '.. | try select(.focused == true) | "name: " + .name, "app_id: " + .app_id, "shell: " + .shell, "class: " + .window_properties.class, "instance: " + .window_properties.class')"; mode default


	bindsym Escape mode "default"
}
bindsym $mod+d mode "$wm_mode"



#
# Workspaces:
#
	#set $ws1 "1:¹"
	#set $ws2 "2:²"
	#set $ws3 "3:󰭹³"
	#set $ws4 "4:⁴"
	#set $ws5 "5:󰯉⁵"
	#set $ws6 "6:󰏘⁶"
	#set $ws7 "7:⁷"
	#set $ws8 "8:󰤇⁸"
	#set $ws9 "9:󱌧⁹"
	#set $ws10 "10:󰇥⁰"
	set $ws1 "1:home"
	set $ws2 "2:dev"
	set $ws3 "3:chat"
	set $ws4 "4:browser"
	set $ws5 "5:gaming"
	set $ws6 "6:art"
	set $ws7 "7::"
	set $ws8 "8::󰤇"
	set $ws9 "9::󱌧"
	set $ws10 "10::󰇥"

	workspace $ws1 output DP-1
	workspace $ws3 output DP-2

    # Switch to workspace
    bindsym $mod+1 workspace number $ws1
    bindsym $mod+2 workspace number $ws2
    bindsym $mod+3 workspace number $ws3
    bindsym $mod+4 workspace number $ws4
    bindsym $mod+5 workspace number $ws5
    bindsym $mod+6 workspace number $ws6
    bindsym $mod+7 workspace number $ws7
    bindsym $mod+8 workspace number $ws8
    bindsym $mod+9 workspace number $ws9
    bindsym $mod+0 workspace number $ws10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number 1
    bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number 2
    bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number 3
    bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number 4
    bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number 5
    bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number 6
    bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number 7
    bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number 8
    bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number 9
    bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number 10 
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    bindsym $mod+Ctrl+1 move workspace to output left
    bindsym $mod+Ctrl+2 move workspace to output right

    #bindsym $mod+Shift+Page_Up workspace prev
    #bindsym $mod+Shift+Page_Down workspace next
    bindsym $mod+Page_Up workspace prev_on_output
    bindsym $mod+Page_Down workspace next_on_output
	bindsym $mod+u workspace next_on_output
	bindsym $mod+i workspace prev_on_output
    bindsym $mod+shift+Page_Up move to workspace prev_on_output
    bindsym $mod+shift+Page_Down move to workspace next_on_output
	bindsym $mod+shift+u move to workspace next_on_output
	bindsym $mod+shift+i move to workspace prev_on_output

# Scaling
    # Workspace
    #bindsym $mod+Shift+comma scale_workspace incr -0.05
    #bindsym $mod+Shift+period scale_workspace incr 0.05
    #bindsym $mod+Shift+Ctrl+period scale_workspace reset
    bindsym --whole-window $mod+Ctrl+Shift+button4 scale_workspace incr 0.05
    bindsym --whole-window $mod+Ctrl+Shift+button5 scale_workspace incr -0.05
    bindsym --whole-window $mod+Ctrl+Shift+button2 scale_workspace reset

    # Overview
    bindsym --no-repeat $mod+tab scale_workspace overview
    #bindsym --whole-window button8 scale_workspace overview

    # Jump
    jump_labels_color #ffaafcFF
    jump_labels_background #15309e88
    jump_labels_scale 0.5
    jump_labels_keys 12345
    bindsym --no-repeat $mod+ctrl+tab jump
