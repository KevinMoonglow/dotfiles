mode "󰘞 align" {
    bindsym c align center; set_mode center_horiz nocenter_vert reorder_auto; mode default
    bindsym m align middle; set_mode center_horiz center_vert reorder_auto ; mode default
    bindsym v set_mode nocenter_horiz center_vert reorder_auto ; mode default
    bindsym r set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym $left align left; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym $right align right; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym $up align up; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym $down align down; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym h align left; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym l align right; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym k align up; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym j align down; set_mode nocenter_horiz nocenter_vert reorder_auto; mode default
    bindsym Escape mode "default"
}
