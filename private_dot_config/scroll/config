	#bindsym s exec hyprshot -m output -z -o "$screenshots" -f "$(date '+%Y-%m-%d_%H-%M-%S.%N%z')_screenshot.png"; mode "default"
	#bindsym w exec hyprshot -m "active" -m "window" -o "$screenshots" -f "$(date '+%Y-%m-%d_%H-%M-%S.%N%z')_screenshot_$(swaymsg -t get_tree | jq -r '..|try select(.focused == true).app_id').png"; mode "default"
