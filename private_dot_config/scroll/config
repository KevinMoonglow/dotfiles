    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+h focus left
    bindsym $mod+j focus down
    bindsym $mod+k focus up
    bindsym $mod+l focus right

	bindsym --whole-window $mod+button4 exec scrollmsg focus left
	bindsym --whole-window $mod+button5 exec scrollmsg focus right
	bindsym --whole-window $mod+Shift+button4 exec scrollmsg focus up
	bindsym --whole-window $mod+Shift+button5 exec scrollmsg focus down
	bindsym --whole-window $mod+Ctrl+button4 exec scrollmsg workspace prev_on_output
	bindsym --whole-window $mod+Ctrl+button5 exec scrollmsg workspace next_on_output

    bindsym $mod+home focus beginning
    bindsym $mod+end focus end

	bindsym $mod+shift+$left move left
	bindsym $mod+shift+$right move right
	bindsym $mod+shift+$up move up
	bindsym $mod+shift+$down move down
	bindsym $mod+shift+h move left
	bindsym $mod+shift+l move right
	bindsym $mod+shift+k move up
	bindsym $mod+shift+j move down
	bindsym $mod+bracketleft move left nomode
	bindsym $mod+bracketright move right nomode
	bindsym $mod+semicolon [urgent=oldest] focus

	#bindsym $mod+p focus parent
	#bindsym $mod+shift+p focus child
	#bindsym $mod+t layout tabbed

    # Move the focused window with the same, but add Ctrl
    #bindsym $mod+Ctrl+$left move left
    #bindsym $mod+Ctrl+$down move down
